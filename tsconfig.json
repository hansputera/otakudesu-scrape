{
    "compilerOptions": {
        "allowJs": true,
        "module": "CommonJS",
        "target": "ES2016",
        "declaration": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "declarationDir": "./typings",
        "outDir": "./dist",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/**/*"
    ],
}